<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialer_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_49"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickOne"
            android:src="@drawable/ic_number_one"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickTwo"
            android:src="@drawable/ic_number_two"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickThree"
            android:src="@drawable/ic_number_three"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickThree"
            android:src="@drawable/ic_dash_icon"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickFour"
            android:src="@drawable/ic_number_four"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickFive"
            android:src="@drawable/ic_five_number"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickSix"
            android:src="@drawable/ic_six_number"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickThree"
            android:src="@drawable/ic_square_bracker"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_37"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickSeven"
            android:src="@drawable/ic_number_seven"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickEight"
            android:src="@drawable/ic_number_eight"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickNine"
            android:src="@drawable/ic_number_nine"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickThree"
            android:src="@drawable/ic_backspace"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_36"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_comma_icon"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickZero"
            android:src="@drawable/ic_number_zero"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="clickDelete"
            android:src="@drawable/ic_dot_icon"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/card_icon_dimension"
                android:layout_height="@dimen/card_icon_dimension"
                android:onClick="clickThree"
                android:background="@drawable/ic_dialer_green_button_bg"
                android:src="@drawable/ic_keyboard_return"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
